{
  "name": "pure-ssr",
  "version": "0.0.2",
  "description": "React server side rendering boilerplate",
  "main": "index.js",
  "repository": "https://github.com/renshenhe/pure-ssr.git",
  "author": "Ren He",
  "license": "MIT",
  "scripts": {
    "start": "yarn dev:start",
    "dev:start": "nodemon -e js,jsx --ignore lib --ignore dist --exec babel-node src/server",
    "dev:wds": "webpack-dev-server --progress",
    "prod:build": "rimraf lib && babel src -d build --ignore .test.js",
    "prod:start": "cross-env NODE_ENV=production pm2 start build/server && pm2 logs",
    "prod:stop": "pm2 delete server",
    "lint": "eslint src",
    "test": "eslint src && flow && jest --coverage",
    "precommit": "yarn test",
    "prepush": "yarn test"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "compression": "^1.6.2",
    "express": "^4.15.2",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "nodemon": "^1.11.0",
    "react": "^15.5.3",
    "react-dom": "^15.5.3",
    "react-helmet": "^5.0.2",
    "react-hot-loader": "next",
    "react-redux": "^5.0.3",
    "react-router": "next",
    "react-router-dom": "next",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "fetch-mock": "^5.10.0",
    "flow-bin": "^0.43.1",
    "jest": "^19.0.2",
    "pm2": "^2.4.4",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  }
}
